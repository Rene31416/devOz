{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution":"node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist", // leftalwasy dot first './dist'
    "rootDir": "./src",
    "esModuleInterop": true,
    "emitDecoratorMetadata":true,
    "baseUrl":".",
    "paths": {
      "*": [
          "node_modules/*"
      ]
  }
    
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ],
  "include": ["src/**/*.ts"]
}
